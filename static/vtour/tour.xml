<krpano version="1.19" title="房屋漫游">
  <!-- 引入相关插件的地方 -->
	<include url="skin/vtourskin.xml" />
  <include url="%SWFPATH%/plugins/showtext.xml" />
  <!-- 引入地图 -->
  <include url="./map.xml"/>
  <!-- 引入编辑插件 -->
