	         url.html5="%SWFPATH%/plugins/videoplayer.js"
	         url.flash="%SWFPATH%/plugins/videoplayer.swf"
	         videourl="videos/小米广告.mp4"
	         posterurl="images/cover.jpg"
	         distorted="true"
	         ath="121.103444" atv="-12.121398" width="1280" height="900" scale="0.45" 
	         depth="1000"
	         rx="0"
	         ry="0"
	         rz="0"
	         ox="0"
